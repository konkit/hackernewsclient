{

  "description": "Hacker News client by Konkit",
  "manifest_version": 2,
  "name": "Hacker News client by Konkit",
  "version": "1.0.1",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "HN.png"
  },

  "content_security_policy": "script-src 'self' https://widgets.getpocket.com; object-src 'self'"

}