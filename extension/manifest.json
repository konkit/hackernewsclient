{

  "description": "Hacker News client by Konkit",
  "manifest_version": 2,
  "name": "Hacker News client by Konkit",
  "version": "1.0",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "page-32.png"
  }

}